<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Most permissive configuration - allow all cleartext traffic -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </base-config>
</network-security-config>
